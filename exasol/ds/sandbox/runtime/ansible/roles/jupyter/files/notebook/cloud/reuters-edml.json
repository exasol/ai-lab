{
  "$schema": "https://schemas.exasol.com/edml-1.2.0.json",
  "source": "reuters-*.json",
  "destinationTable": "NEWS",
  "addSourceReferenceColumn": true,
  "mapping": {
    "fields": {
      "title": {
        "toVarcharMapping": {
          "varcharColumnSize": 255,
          "overflowBehaviour": "TRUNCATE"
        }
      },
      "id": {
        "toDecimalMapping": {
          "decimalPrecision": 18,
          "decimalScale": 0,
          "destinationName": "NEWS_ID"
        }
      }
    }
  }
}